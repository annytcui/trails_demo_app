<% provide(:title, "Update profile") %>
<div class="update">
  <h1>Update your profile</h1>

  <div class="update-form">
    <%= form_for(@user, html: {id: "update-form"}) do |f| %>

      <div class="form-group row">
        <%= f.label :name, class: 'col-sm-4 col-form-label' %>
        <%= f.text_field :name, class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: 'col-sm-4 col-form-label' %>
        <%= f.email_field :email, class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: 'col-sm-4 col-form-label' %>
        <%= f.password_field :password, class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, "Confirmation", class: 'col-sm-4 col-form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control col-sm-8' %>
      </div>

      <%= f.submit "Save changes", class: "btn btn-success" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>

<script type="text/javascript">
  <%= render "validate_update.js" %>
</script>
