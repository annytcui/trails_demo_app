<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="home">
    <h1>Log in</h1>
    <p>This will be a login page for new users.</p>
  </div>
<% end %>

<script type="text/javascript">
  <%= render "validate_post.js" %>
</script>
